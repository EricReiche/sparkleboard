{% extends 'base.html.twig' %}

{% block title %}Family index{% endblock %}

{% block body %}
    <h1>Family index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>{{ family.id }}</td>
                <td>{{ family.name }}</td>
                <td>{{ family.createdAt ? family.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ family.updatedAt ? family.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_family_show', {'id': family.id}) }}">show</a>
                    <a href="{{ path('app_family_edit', {'id': family.id}) }}">edit</a>
                    <a href="{{ path('app_family_delete', {'id': family.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_family_new') }}">Create new</a>
{% endblock %}
